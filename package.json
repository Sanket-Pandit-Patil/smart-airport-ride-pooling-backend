{
  "name": "smart-airport-ride-pooling",
  "version": "1.0.0",
  "description": "Smart Airport Ride Pooling Backend - groups passengers into shared cabs with route and pricing optimization",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && node -e \"require('fs').copyFileSync('src/swagger.json', 'dist/swagger.json')\"",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "migrate": "node -r ts-node/register node_modules/node-pg-migrate/bin/node-pg-migrate",
    "migrate:up": "node scripts/run-migrations.js",
    "migrate:down": "node -r ts-node/register node_modules/node-pg-migrate/bin/node-pg-migrate down",
    "seed": "ts-node src/db/seed.ts",
    "test": "jest --coverage"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "node-pg-migrate": "^6.2.2",
    "zod": "^3.22.4",
    "swagger-ui-express": "^5.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/swagger-ui-express": "^4.1.5",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.11"
  }
}
